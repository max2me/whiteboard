{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "cmd",
	"isShellCommand": true,
	"args": ["/C"],
	"tasks": [
		{
			"taskName": "dotnet",
			"args": ["build"],
			"isBuildCommand": true,
			"showOutput": "silent",
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "tsc",
			"args": ["-w", "-p", "typescript/"],
			"isBuildCommand": false,
			"showOutput": "silent",
			"isWatching": true,
			"problemMatcher": "$tsc-watch"
		}
	]
}